@model StreamApp.Models.Series

@{
    ViewData["Title"] = Model.Title;
}

<div class="details-container" style="flex-direction: column; gap: 1rem;">
    <div style="display:flex; gap: 2rem;">
        <div class="details-poster-wrapper">
            @{
                var poster = !string.IsNullOrEmpty(Model.PosterPath) ? Url.Action("Image", "Video", new { path = Model.PosterPath }) : "/media/poster.jpg";
            }
            <img src="@poster" class="details-poster" style="width:200px;" onerror="this.src='/media/poster.jpg'" />
        </div>
        <div class="details-info">
            <h1>@Model.Title</h1>
            <p class="text-muted">@Model.Seasons.Count Seasons</p>
        </div>
    </div>

    <div class="season-list">
        @foreach (var season in Model.Seasons)
        {
            <div class="season-section">
                <h3>@season.Title</h3>
                <div class="episode-list">
                    @foreach (var episode in season.Episodes)
                    {
                        <a href="@Url.Action("Play", "Video", new { path = episode.FilePath })" class="episode-item" tabindex="0">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>@(episode.EpisodeNumber). @episode.Title</span>
                                <span class="text-muted">&#9658;</span>
                            </div>
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>
