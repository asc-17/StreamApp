@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Playing: @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body { margin: 0; background: #000; overflow: hidden; font-family: sans-serif; color: #fff; }
        #video-container { position: relative; width: 100vw; height: 100vh; display: flex; align-items: center; justify-content: center; }
        video { width: 100%; height: 100%; object-fit: contain; }
        
        .overlay {
            position: absolute; top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0,0,0,0.0);
            transition: opacity 0.3s;
            display: flex; flex-direction: column; justify-content: space-between;
            pointer-events: none; /* Let clicks pass to video for toggle */
        }
        .overlay.visible { background: rgba(0,0,0,0.4); }
        .overlay > * { pointer-events: auto; }
        
        .top-bar { padding: 20px; opacity: 0; transition: opacity 0.3s; }
        .bottom-bar { padding: 20px; background: linear-gradient(to top, rgba(0,0,0,0.8), transparent); opacity: 0; transition: opacity 0.3s; display: flex; flex-direction: column; gap: 10px; }
        
        .overlay.visible .top-bar, .overlay.visible .bottom-bar { opacity: 1; }
        
        .title { font-size: 1.5rem; font-weight: bold; margin-left: 1rem; }
        
        .progress-container { width: 100%; height: 5px; background: #555; position: relative; cursor: pointer; transition: height 0.1s; }
        .progress-container:hover { height: 10px; }
        .progress-bar { height: 100%; background: #e50914; width: 0%; }
        
        .controls { display: flex; align-items: center; justify-content: space-between; }
        .controls .left, .controls .right { display: flex; align-items: center; gap: 10px; }
        .btn-control { background: none; border: none; color: #fff; font-size: 1.2rem; cursor: pointer; padding: 5px; display: flex; align-items: center; }
        .btn-control:hover { color: #e50914; }
        .btn-control img { width: 32px; height: 32px; }
        .btn-control:hover img { filter: brightness(0) invert(19%) sepia(92%) saturate(5831%) hue-rotate(354deg) brightness(93%) contrast(116%); } /* Netflix Red #E50914 from White */
        
        .settings-panel {
            position: absolute; bottom: 80px; right: 20px; width: 300px; max-height: 400px;
            background: rgba(20, 20, 20, 0.95); border-radius: 8px; backdrop-filter: blur(10px);
            display: none; flex-direction: column; overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        }
        .settings-panel.show { display: flex; }
        .settings-header {
            padding: 15px; border-bottom: 1px solid rgba(255,255,255,0.1);
            display: flex; justify-content: space-between; align-items: center; font-weight: bold;
        }
        .close-settings { background: none; border: none; color: #fff; font-size: 1.2rem; cursor: pointer; }
        #subtitlesList { overflow-y: auto; max-height: 350px; }
        .subtitle-item {
            padding: 12px 15px; border-bottom: 1px solid rgba(255,255,255,0.05); cursor: pointer; transition: background 0.2s;
        }
        .subtitle-item:hover { background: rgba(255,255,255,0.1); }
        .subtitle-badge {
            font-size: 0.75rem; background: rgba(255,255,255,0.2); padding: 2px 6px; border-radius: 4px; margin-left: 5px;
        }
    </style>
</head>
<body>
    <div id="video-container">
        <video id="player" src="@ViewBag.VideoPath" playsinline>
        </video>
        
        <div id="overlay" class="overlay visible">
            <div class="top-bar">
                <button class="btn-control" onclick="history.back()"><img src="~/images/back.svg" alt="Back" /></button>
                <span class="title">@ViewBag.Title</span>
            </div>
            
            <div class="bottom-bar">
                <div class="progress-container" id="timeline">
                    <div class="progress-bar" id="progress"></div>
                </div>
                <div class="controls">
                    <div class="left">
                        <button class="btn-control" id="playBtn"><img src="~/images/play.svg" alt="Play" /></button>
                        <button class="btn-control" id="rwBtn" title="-10s"><img src="~/images/bwd.svg" alt="-10s" /></button>
                        <button class="btn-control" id="fwBtn" title="+10s"><img src="~/images/fwd.svg" alt="+10s" /></button>
                        <span id="timeDisplay">00:00 / 00:00</span>
                    </div>
                    <div class="right">
                        <button class="btn-control" id="muteBtn"><img src="~/images/unmute.svg" alt="Volume" /></button>
                        <button class="btn-control" id="settingsBtn"><img src="~/images/setting.svg" alt="Settings" /></button>
                        <button class="btn-control" id="fsBtn"><img src="~/images/FullScr.svg" alt="Fullscreen" /></button>
                    </div>
                </div>
            </div>
            
            <!-- Settings Panel -->
            <div class="settings-panel" id="settingsPanel">
                <div class="settings-header">
                    <span>Subtitles</span>
                    <button class="close-settings" onclick="document.getElementById('settingsPanel').classList.remove('show')">&times;</button>
                </div>
                <div id="loadingSubtitles" style="text-align: center; padding: 20px; color: #aaa; display: none;">Loading...</div>
                <div id="subtitlesList"></div>
            </div>
        </div>
    </div>

    <script>
        // Use JSON serialization to safely embed the string with backslashes
        const videoPath = @Json.Serialize(ViewBag.VideoFilePath);
        const videoTitle = '@ViewBag.Title';
        const searchTitle = '@(ViewBag.SearchTitle ?? ViewBag.Title)';
        const season = @(ViewBag.Season?.ToString() ?? "null");
        const episode = @(ViewBag.Episode?.ToString() ?? "null");
        
        // Debug output
        console.log('=== Video Player Debug ===');
        console.log('VideoPath:', videoPath);
        
        const video = document.getElementById('player');
        const overlay = document.getElementById('overlay');
        const playBtn = document.getElementById('playBtn');
        const rwBtn = document.getElementById('rwBtn');
        const fwBtn = document.getElementById('fwBtn');
        const progress = document.getElementById('progress');
        const timeline = document.getElementById('timeline');
        const timeDisplay = document.getElementById('timeDisplay');
        const fsBtn = document.getElementById('fsBtn');
        const muteBtn = document.getElementById('muteBtn');
        const settingsBtn = document.getElementById('settingsBtn');
        const settingsPanel = document.getElementById('settingsPanel');
        
        let hideTimeout;
        
        // Ensure audio is unmuted
        video.muted = false;
        video.volume = 1.0;

        // Progress Saving Function
        function saveProgress() {
            if (video.currentTime > 5) { // Only save if watched more than 5 seconds
                console.log('Saving progress:', video.currentTime);
                fetch('/Progress/Update', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ path: videoPath, time: video.currentTime }),
                    keepalive: true // Important for unload events
                }).catch(e => console.error('Save failed', e));
            }
        }

        // Restore Progress
        video.addEventListener('loadedmetadata', async () => {
             console.log('Video metadata loaded:', {
                duration: video.duration,
                videoWidth: video.videoWidth,
                videoHeight: video.videoHeight
            });

            if (video.videoWidth === 0) console.warn('Video has no dimensions - codec may not be supported');

            try {
                const response = await fetch(`/Progress/Get?path=${encodeURIComponent(videoPath)}`);
                const data = await response.json();
                if (data.time > 0) {
                    console.log('Restoring progress:', data.time);
                    video.currentTime = data.time;
                }
            } catch (e) {
                console.error('Failed to load progress', e);
            }
        });
        
        // Save on Time Update (Interval)
        let lastSaveTime = 0;
        video.addEventListener('timeupdate', () => {
            const pct = (video.currentTime / video.duration) * 100;
            progress.style.width = pct + '%';
            timeDisplay.textContent = formatTime(video.currentTime) + ' / ' + formatTime(video.duration || 0);

            // Save every 10 seconds
            const now = Date.now();
            if (now - lastSaveTime > 10000 && !video.paused) {
                lastSaveTime = now;
                saveProgress();
            }
        });

        // Save on Pause
        video.addEventListener('pause', () => {
            playBtn.innerHTML = '<img src="/images/play.svg" alt="Play" />'; 
            overlay.classList.add('visible');
            clearTimeout(hideTimeout);
            saveProgress(); // Update immediately on pause
        });

        // Save on Close/Navigate
        window.addEventListener('blur', () => saveProgress());
        window.addEventListener('beforeunload', () => saveProgress());

        function showUI() {
            overlay.classList.add('visible');
            document.body.style.cursor = 'auto';
            clearTimeout(hideTimeout);
            hideTimeout = setTimeout(() => {
                if (!video.paused) {
                    overlay.classList.remove('visible');
                    document.body.style.cursor = 'none';
                }
            }, 3000);
        }

        document.addEventListener('mousemove', showUI);
        document.addEventListener('keydown', showUI);
        document.addEventListener('click', () => {
             // If clicking video background, toggle play
             // Handled by specific listeners below
        });
        
        // Play Toggle
        function togglePlay() {
            if (video.paused) video.play();
            else video.pause();
        }
        
        // Seek Functions
        function seek(seconds) {
            video.currentTime += seconds;
            showUI();
        }
        
        playBtn.addEventListener('click', togglePlay);
        video.addEventListener('click', togglePlay);
        rwBtn.addEventListener('click', () => seek(-10));
        fwBtn.addEventListener('click', () => seek(10));
        
        // Update UI
        video.addEventListener('play', () => {
            playBtn.innerHTML = '<img src="/images/pause.svg" alt="Pause" />';
            showUI();
        });
        
        // Detect video errors
        video.addEventListener('error', (e) => {
            console.error('Video error:', e);
            const errorCode = video.error ? video.error.code : 'unknown';
            const errorMsg = video.error ? video.error.message : 'Unknown error';
            alert(`Video playback error (Code: ${errorCode}): ${errorMsg}\n\nThis MKV file may use a codec (like HEVC/H.265) that your browser doesn't support. Try converting to H.264.`);
        });
        
        // Seek
        timeline.addEventListener('click', (e) => {
            const rect = timeline.getBoundingClientRect();
            const pos = (e.clientX - rect.left) / rect.width;
            video.currentTime = pos * video.duration;
        });
        
        // Fullscreen
        fsBtn.addEventListener('click', () => {
            if (!document.fullscreenElement) document.documentElement.requestFullscreen();
            else document.exitFullscreen();
        });
        
        // Mute Toggle
        muteBtn.addEventListener('click', () => {
            video.muted = !video.muted;
            muteBtn.innerHTML = video.muted ? '<img src="/images/mute.svg" alt="Muted" />' : '<img src="/images/unmute.svg" alt="Volume" />';
        });
        
        // Formatting
        function formatTime(s) {
            if (isNaN(s)) return "00:00";
            const h = Math.floor(s / 3600);
            const m = Math.floor((s % 3600) / 60);
            const sec = Math.floor(s % 60);
            
            if (h > 0) {
                return h + ':' + (m < 10 ? '0' : '') + m + ':' + (sec < 10 ? '0' : '') + sec;
            }
            return m + ':' + (sec < 10 ? '0' : '') + sec;
        }

        // Keyboard Shortcuts
        document.addEventListener('keydown', (e) => {
            switch(e.key) {
                case ' ':
                case 'k':
                    togglePlay();
                    break;
                case 'ArrowRight':
                    video.currentTime += 10;
                    break;
                case 'ArrowLeft':
                    video.currentTime -= 10;
                    break;
                case 'f':
                    fsBtn.click();
                    break;
                case 'm':
                    muteBtn.click();
                    break;
            }
        });
        
        // Settings Panel
        let subtitlesLoaded = false;
        settingsBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            settingsPanel.classList.toggle('show');
            if (settingsPanel.classList.contains('show') && !subtitlesLoaded) {
                subtitlesLoaded = true;
                // Delay to prevent UI freeze
                setTimeout(() => searchOpenSubtitles(), 100);
            }
        });
        
        // Close settings when clicking outside
        document.addEventListener('click', (e) => {
            if (!settingsPanel.contains(e.target) && e.target !== settingsBtn) {
                settingsPanel.classList.remove('show');
            }
        });
        
        // OpenSubtitles Integration
        async function searchOpenSubtitles() {
            const loadingEl = document.getElementById('loadingSubtitles');
            const listEl = document.getElementById('subtitlesList');
            
            loadingEl.style.display = 'block';
            loadingEl.textContent = 'Searching for subtitles...';
            listEl.innerHTML = '';
            
            try {
                let url = `/Video/SearchSubtitles?title=${encodeURIComponent(searchTitle)}`;
                if (season !== null) url += `&season=${season}`;
                if (episode !== null) url += `&episode=${episode}`;
                
                console.log('Searching subtitles with URL:', url);
                
                const response = await fetch(url);
                const result = await response.json();
                
                loadingEl.style.display = 'none';
                
                // Check for error message
                if (result.errorMessage) {
                    listEl.innerHTML = `<div style="text-align: center; color: #ff6b6b; padding: 20px; line-height: 1.6;">
                        <div style="font-size: 1.2rem; margin-bottom: 10px;">??</div>
                        <div>${result.errorMessage}</div>
                        <div style="font-size: 0.85rem; color: #aaa; margin-top: 10px;">Searching for: "${videoTitle}"</div>
                    </div>`;
                    return;
                }
                
                if (!result.subtitles || result.subtitles.length === 0) {
                    listEl.innerHTML = `<div style="text-align: center; color: #aaa; padding: 20px; line-height: 1.6;">
                        <div style="font-size: 1.2rem; margin-bottom: 10px;">??</div>
                        <div>No subtitles found</div>
                        <div style="font-size: 0.85rem; color: #666; margin-top: 10px;">Try renaming your file to match the movie/show title</div>
                        <div style="font-size: 0.85rem; color: #666;">Searched for: "${videoTitle}"</div>
                    </div>`;
                    return;
                }
                
                result.subtitles.forEach(sub => {
                    const div = document.createElement('div');
                    div.className = 'subtitle-item';
                    div.innerHTML = `
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <div>???? ${sub.language}</div>
                                <div style="font-size: 0.85rem; color: #aaa; margin-top: 4px;">${sub.releaseName || sub.fileName}</div>
                            </div>
                            <div>
                                <span class="subtitle-badge">? ${sub.downloads}</span>
                                <span class="subtitle-badge">? ${sub.rating.toFixed(1)}</span>
                            </div>
                        </div>
                    `;
                    div.onclick = () => downloadSubtitle(sub.fileId, sub.languageCode);
                    listEl.appendChild(div);
                });
            } catch (error) {
                loadingEl.style.display = 'none';
                listEl.innerHTML = `<div style="text-align: center; color: #f44; padding: 20px;">
                    <div>Error loading subtitles</div>
                    <div style="font-size: 0.85rem; color: #aaa; margin-top: 10px;">Check browser console (F12) for details</div>
                </div>`;
                console.error('Error searching subtitles:', error);
            }
        }
        
        async function downloadSubtitle(fileId, language) {
            const loadingEl = document.getElementById('loadingSubtitles');
            loadingEl.textContent = 'Downloading subtitle...';
            loadingEl.style.display = 'block';
            
            try {
                const response = await fetch('/Video/DownloadSubtitle', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        fileId: fileId,
                        videoPath: videoPath,
                        language: language
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    loadingEl.textContent = 'Subtitle downloaded! Loading...';
                    loadSubtitleTrack(result.path);
                    setTimeout(() => {
                        settingsPanel.classList.remove('show');
                        loadingEl.style.display = 'none';
                    }, 1000);
                } else {
                    loadingEl.textContent = 'Failed to download subtitle';
                    setTimeout(() => {
                        loadingEl.style.display = 'none';
                        searchOpenSubtitles();
                    }, 2000);
                }
            } catch (error) {
                loadingEl.textContent = 'Error downloading subtitle';
                console.error('Error downloading subtitle:', error);
                setTimeout(() => {
                    loadingEl.style.display = 'none';
                    searchOpenSubtitles();
                }, 2000);
            }
        }
        
        function loadSubtitleTrack(subtitlePath) {
            // Remove existing tracks
            const tracks = video.querySelectorAll('track');
            tracks.forEach(t => t.remove());
            
            // Add new track
            const track = document.createElement('track');
            track.kind = 'subtitles';
            track.label = 'External';
            track.srclang = 'en';
            track.src = `/Video/Subtitle?path=${encodeURIComponent(subtitlePath)}`;
            track.default = true;
            
            video.appendChild(track);
            
            // Enable the track
            setTimeout(() => {
                if (video.textTracks.length > 0) {
                    video.textTracks[0].mode = 'showing';
                }
            }, 100);
        }
        
        // Initial Kick
        showUI();
    </script>
</body>
</html>
