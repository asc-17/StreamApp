@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Playing: @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body { margin: 0; background: #000; overflow: hidden; font-family: sans-serif; color: #fff; }
        #video-container { position: relative; width: 100vw; height: 100vh; display: flex; align-items: center; justify-content: center; }
        video { width: 100%; height: 100%; object-fit: contain; }
        
        .overlay {
            position: absolute; top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0,0,0,0.0);
            transition: opacity 0.3s;
            display: flex; flex-direction: column; justify-content: space-between;
            pointer-events: none; /* Let clicks pass to video for toggle */
        }
        .overlay.visible { background: rgba(0,0,0,0.4); }
        .overlay > * { pointer-events: auto; }
        
        .top-bar { padding: 20px; opacity: 0; transition: opacity 0.3s; }
        .bottom-bar { padding: 20px; background: linear-gradient(to top, rgba(0,0,0,0.8), transparent); opacity: 0; transition: opacity 0.3s; display: flex; flex-direction: column; gap: 10px; }
        
        .overlay.visible .top-bar, .overlay.visible .bottom-bar { opacity: 1; }
        
        .title { font-size: 1.5rem; font-weight: bold; margin-left: 1rem; }
        
        .progress-container { width: 100%; height: 5px; background: #555; position: relative; cursor: pointer; transition: height 0.1s; }
        .progress-container:hover { height: 10px; }
        .progress-bar { height: 100%; background: #e50914; width: 0%; }
        
        .controls { display: flex; align-items: center; justify-content: space-between; }
        .controls .left, .controls .right { display: flex; align-items: center; gap: 10px; }
        .btn-control { background: none; border: none; color: #fff; font-size: 1.2rem; cursor: pointer; padding: 5px; display: flex; align-items: center; }
        .btn-control:hover { color: #e50914; }
        .btn-control img { width: 32px; height: 32px; }
        .btn-control:hover img { filter: brightness(0) invert(19%) sepia(92%) saturate(5831%) hue-rotate(354deg) brightness(93%) contrast(116%); } /* Netflix Red #E50914 from White */
        
        .settings-panel {
            position: absolute; bottom: 80px; right: 20px; width: 300px; max-height: 400px;
            background: rgba(20, 20, 20, 0.95); border-radius: 8px; backdrop-filter: blur(10px);
            display: none; flex-direction: column; overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        }
        .settings-panel.show { display: flex; }
        .settings-header {
            padding: 15px; border-bottom: 1px solid rgba(255,255,255,0.1);
            display: flex; justify-content: space-between; align-items: center; font-weight: bold;
        }
        .close-settings { background: none; border: none; color: #fff; font-size: 1.2rem; cursor: pointer; }
        #subtitlesList { overflow-y: auto; max-height: 350px; }
        .subtitle-item {
            padding: 12px 15px; border-bottom: 1px solid rgba(255,255,255,0.05); cursor: pointer; transition: background 0.2s;
        }
        .subtitle-item:hover { background: rgba(255,255,255,0.1); }
        :root {
            --sub-size: 1.5rem;
            --sub-color: #ffffff;
            --sub-bg: rgba(0, 0, 0, 0.7);
            --sub-shadow: none;
            --sub-edge: none;
        }
        
        /* WebVTT Cue Styling */
        video::cue {
            font-size: var(--sub-size);
            color: var(--sub-color);
            background-color: var(--sub-bg);
            text-shadow: var(--sub-shadow);
            /* text-shadow handles edge styles slightly differently in standard CSS, 
               but ::cue support varies. We focus on shadows/colors. */
        }

        .subtitle-badge {
            font-size: 0.75rem; background: rgba(255,255,255,0.2); padding: 2px 6px; border-radius: 4px; margin-left: 5px;
        }
        
        /* Tabbed Settings Panel */
        .settings-panel {
            position: absolute; bottom: 80px; right: 20px; width: 350px; max-height: 500px;
            background: rgba(20, 20, 20, 0.95); border-radius: 8px; backdrop-filter: blur(10px);
            display: none; flex-direction: column; overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.3);
            font-size: 0.9rem;
        }
        
        .tab-header {
            display: flex; border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .tab-btn {
            flex: 1; padding: 15px; background: none; border: none; color: #aaa; cursor: pointer; font-weight: bold;
            transition: color 0.2s, background 0.2s;
        }
        .tab-btn:hover { color: #fff; background: rgba(255,255,255,0.05); }
        .tab-btn.active { color: #fff; border-bottom: 2px solid #e50914; }
        
        .tab-content { display: none; overflow-y: auto; max-height: 400px; padding: 10px; }
        .tab-content.active { display: block; }
        
        /* Style Controls */
        .style-group { margin-bottom: 15px; }
        .style-label { color: #aaa; margin-bottom: 8px; display: block; font-size: 0.8rem; text-transform: uppercase; }
        .style-options { display: flex; gap: 8px; flex-wrap: wrap; }
        
        .style-btn {
            background: rgba(255,255,255,0.1); border: 1px solid transparent; color: #fff; 
            padding: 8px 12px; border-radius: 4px; cursor: pointer; font-size: 0.85rem;
        }
        .style-btn:hover { background: rgba(255,255,255,0.2); }
        .style-btn.active { background: #e50914; border-color: #e50914; }
        
        .preview-box {
            margin-top: 15px; padding: 20px; text-align: center; 
            background-image: url('/images/poster_placeholder.jpg'); /* Optional background */
            background-size: cover; border-radius: 4px; position: relative; height: 100px;
            display: flex; align-items: center; justify-content: center;
        }
        .preview-text {
            font-family: sans-serif;
            font-size: var(--sub-size);
            color: var(--sub-color);
            background-color: var(--sub-bg);
            text-shadow: var(--sub-shadow);
        }
    </style>
</head>
<body>
    <div id="video-container">
        <video id="player" src="@ViewBag.VideoPath" playsinline>
        </video>
        
        <div id="overlay" class="overlay visible">
            <div class="top-bar">
                <button class="btn-control" onclick="history.back()"><img src="~/images/back.svg" alt="Back" /></button>
                <span class="title">@ViewBag.Title</span>
            </div>
            
            <div class="bottom-bar">
                <div class="progress-container" id="timeline">
                    <div class="progress-bar" id="progress"></div>
                </div>
                <div class="controls">
                    <div class="left">
                        <button class="btn-control" id="playBtn"><img src="~/images/play.svg" alt="Play" /></button>
                        <button class="btn-control" id="rwBtn" title="-10s"><img src="~/images/bwd.svg" alt="-10s" /></button>
                        <button class="btn-control" id="fwBtn" title="+10s"><img src="~/images/fwd.svg" alt="+10s" /></button>
                        <span id="timeDisplay">00:00 / 00:00</span>
                    </div>
                    <div class="right">
                        <button class="btn-control" id="muteBtn"><img src="~/images/unmute.svg" alt="Volume" /></button>
                        <button class="btn-control" id="ccBtn"><img src="~/images/capoff.svg" alt="Subtitles" /></button>
                        <button class="btn-control" id="settingsBtn"><img src="~/images/setting.svg" alt="Settings" /></button>
                        <button class="btn-control" id="fsBtn"><img src="~/images/FullScr.svg" alt="Fullscreen" /></button>
                    </div>
                </div>
            </div>
            
            <!-- Settings Panel -->
            <div class="settings-panel" id="settingsPanel">
                <div class="tab-header">
                    <button class="tab-btn active" onclick="openTab('tracks')">Subtitles</button>
                    <button class="tab-btn" onclick="openTab('style')">Settings</button>
                    <button style="padding: 0 15px; background: none; border: none; color: #fff; font-size: 1.5rem; cursor: pointer;" onclick="toggleSettings()">&times;</button>
                </div>
                
                <!-- Tracks Tab -->
                <div id="tab-tracks" class="tab-content active">
                    <div id="loadingSubtitles" style="text-align: center; padding: 20px; color: #aaa; display: none;">Loading...</div>
                    <div id="subtitlesList"></div>
                </div>
                
                <!-- Style Tab -->
                <div id="tab-style" class="tab-content">
                    <div class="style-group">
                        <span class="style-label">Size</span>
                        <div class="style-options">
                            <button class="style-btn" onclick="setSubtitleSize('1rem', this)">Small</button>
                            <button class="style-btn active" onclick="setSubtitleSize('1.5rem', this)">Normal</button>
                            <button class="style-btn" onclick="setSubtitleSize('2rem', this)">Large</button>
                            <button class="style-btn" onclick="setSubtitleSize('3rem', this)">Huge</button>
                        </div>
                    </div>
                    
                    <div class="style-group">
                        <span class="style-label">Preset</span>
                        <div class="style-options">
                            <button class="style-btn active" onclick="setSubtitlePreset('box', this)">White Box</button>
                            <button class="style-btn" onclick="setSubtitlePreset('shadow', this)">White Shadow</button>
                            <button class="style-btn" onclick="setSubtitlePreset('yellow', this)">Yellow Shadow</button>
                            <button class="style-btn" onclick="setSubtitlePreset('transparent', this)">Transparent</button>
                        </div>
                    </div>
                    
                    <div class="preview-box">
                        <span class="preview-text">Subtitle Preview</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Use JSON serialization to safely embed the string with backslashes
        const videoPath = @Json.Serialize(ViewBag.VideoFilePath);
        const videoTitle = '@ViewBag.Title';
        const searchTitle = '@(ViewBag.SearchTitle ?? ViewBag.Title)';
        const season = @(ViewBag.Season?.ToString() ?? "null");
        const episode = @(ViewBag.Episode?.ToString() ?? "null");
        
        // Debug output
        console.log('=== Video Player Debug ===');
        console.log('VideoPath:', videoPath);
        
        const video = document.getElementById('player');
        const overlay = document.getElementById('overlay');
        const playBtn = document.getElementById('playBtn');
        const rwBtn = document.getElementById('rwBtn');
        const fwBtn = document.getElementById('fwBtn');
        const progress = document.getElementById('progress');
        const timeline = document.getElementById('timeline');
        const timeDisplay = document.getElementById('timeDisplay');
        const fsBtn = document.getElementById('fsBtn');
        const muteBtn = document.getElementById('muteBtn');
        const ccBtn = document.getElementById('ccBtn');
        const settingsBtn = document.getElementById('settingsBtn');
        const settingsPanel = document.getElementById('settingsPanel');
        
        let hideTimeout;
        
        // Ensure audio is unmuted
        video.muted = false;
        video.volume = 1.0;

        // Progress Saving Function
        function saveProgress() {
            if (video.currentTime > 5) { // Only save if watched more than 5 seconds
                console.log('Saving progress:', video.currentTime);
                fetch('/Progress/Update', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ path: videoPath, time: video.currentTime }),
                    keepalive: true // Important for unload events
                }).catch(e => console.error('Save failed', e));
            }
        }

        // Restore Progress
        video.addEventListener('loadedmetadata', async () => {
             console.log('Video metadata loaded:', {
                duration: video.duration,
                videoWidth: video.videoWidth,
                videoHeight: video.videoHeight
            });

            if (video.videoWidth === 0) console.warn('Video has no dimensions - codec may not be supported');

            try {
                const response = await fetch(`/Progress/Get?path=${encodeURIComponent(videoPath)}`);
                const data = await response.json();
                if (data.time > 0) {
                    console.log('Restoring progress:', data.time);
                    video.currentTime = data.time;
                }
            } catch (e) {
                console.error('Failed to load progress', e);
            }
        });
        
        // Save on Time Update (Interval)
        let lastSaveTime = 0;
        video.addEventListener('timeupdate', () => {
            const pct = (video.currentTime / video.duration) * 100;
            progress.style.width = pct + '%';
            timeDisplay.textContent = formatTime(video.currentTime) + ' / ' + formatTime(video.duration || 0);

            // Save every 10 seconds
            const now = Date.now();
            if (now - lastSaveTime > 10000 && !video.paused) {
                lastSaveTime = now;
                saveProgress();
            }
        });

        // Save on Pause
        video.addEventListener('pause', () => {
            playBtn.innerHTML = '<img src="/images/play.svg" alt="Play" />'; 
            overlay.classList.add('visible');
            clearTimeout(hideTimeout);
            saveProgress(); // Update immediately on pause
        });

        // Save on Close/Navigate
        window.addEventListener('blur', () => saveProgress());
        window.addEventListener('beforeunload', () => saveProgress());

        function showUI() {
            overlay.classList.add('visible');
            document.body.style.cursor = 'auto';
            clearTimeout(hideTimeout);
            hideTimeout = setTimeout(() => {
                if (!video.paused) {
                    overlay.classList.remove('visible');
                    document.body.style.cursor = 'none';
                }
            }, 3000);
        }

        document.addEventListener('mousemove', showUI);
        document.addEventListener('keydown', showUI);
        document.addEventListener('click', () => {
             // If clicking video background, toggle play
             // Handled by specific listeners below
        });
        
        // Play Toggle
        function togglePlay() {
            if (video.paused) video.play();
            else video.pause();
        }
        
        // Seek Functions
        function seek(seconds) {
            video.currentTime += seconds;
            showUI();
        }
        
        playBtn.addEventListener('click', togglePlay);
        video.addEventListener('click', togglePlay);
        rwBtn.addEventListener('click', () => seek(-10));
        fwBtn.addEventListener('click', () => seek(10));
        
        // Update UI
        video.addEventListener('play', () => {
            playBtn.innerHTML = '<img src="/images/pause.svg" alt="Pause" />';
            showUI();
        });
        
        // Detect video errors
        video.addEventListener('error', (e) => {
            console.error('Video error:', e);
            const errorCode = video.error ? video.error.code : 'unknown';
            const errorMsg = video.error ? video.error.message : 'Unknown error';
            alert(`Video playback error (Code: ${errorCode}): ${errorMsg}\n\nThis MKV file may use a codec (like HEVC/H.265) that your browser doesn't support. Try converting to H.264.`);
        });
        
        // Seek
        timeline.addEventListener('click', (e) => {
            const rect = timeline.getBoundingClientRect();
            const pos = (e.clientX - rect.left) / rect.width;
            video.currentTime = pos * video.duration;
        });
        
        // Fullscreen
        fsBtn.addEventListener('click', () => {
            if (!document.fullscreenElement) {
                 document.documentElement.requestFullscreen();
            }
            else {
                 document.exitFullscreen();
            }
        });

        document.addEventListener('fullscreenchange', () => {
            if (document.fullscreenElement) {
                fsBtn.innerHTML = '<img src="/images/min.svg" alt="Exit Fullscreen" />';
            } else {
                fsBtn.innerHTML = '<img src="/images/FullScr.svg" alt="Fullscreen" />';
            }
        });
        
        // Mute Toggle
        muteBtn.addEventListener('click', () => {
            video.muted = !video.muted;
            muteBtn.innerHTML = video.muted ? '<img src="/images/mute.svg" alt="Muted" />' : '<img src="/images/unmute.svg" alt="Volume" />';
        });
        
        // Formatting
        function formatTime(s) {
            if (isNaN(s)) return "00:00";
            const h = Math.floor(s / 3600);
            const m = Math.floor((s % 3600) / 60);
            const sec = Math.floor(s % 60);
            
            if (h > 0) {
                return h + ':' + (m < 10 ? '0' : '') + m + ':' + (sec < 10 ? '0' : '') + sec;
            }
            return m + ':' + (sec < 10 ? '0' : '') + sec;
        }

        // Keyboard Shortcuts
        document.addEventListener('keydown', (e) => {
            switch(e.key) {
                case ' ':
                case 'k':
                    togglePlay();
                    break;
                case 'ArrowRight':
                    video.currentTime += 10;
                    break;
                case 'ArrowLeft':
                    video.currentTime -= 10;
                    break;
                case 'f':
                    fsBtn.click();
                    break;
                case 'm':
                    muteBtn.click();
                    break;
            }
        });
        
        // Toggle Subtitles (CC Button)
        ccBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            const track = video.textTracks[0];
            if (track) {
                if (track.mode === 'showing') {
                    track.mode = 'hidden';
                    ccBtn.innerHTML = '<img src="/images/capoff.svg" alt="Subtitles" />';
                    showToast('Subtitles Off');
                    localStorage.setItem('subtitles-enabled', 'false');
                } else {
                    track.mode = 'showing';
                    ccBtn.innerHTML = '<img src="/images/capon.svg" alt="Subtitles" />';
                    showToast('Subtitles On');
                    localStorage.setItem('subtitles-enabled', 'true');
                }
            } else {
                 // No tracks loaded, try opening settings
                 toggleSettings();
            }
        });
        
        function showToast(msg) {
             // Simple toast could be implemented here, or just rely on button visual state
             console.log(msg);
        }

        // Settings Panel
        let subtitlesLoaded = false;
        
        function toggleSettings() {
            settingsPanel.classList.toggle('show');
            if (settingsPanel.classList.contains('show') && !subtitlesLoaded) {
                subtitlesLoaded = true;
                setTimeout(() => loadSubtitles(), 100);
            }
        }
        
        settingsBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            toggleSettings();
        });
        
        // Tab Switching
        window.openTab = function(tabName) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
            
            document.getElementById('tab-' + tabName).classList.add('active');
            // Hacky way to find button, simple for now
            const btns = document.querySelectorAll('.tab-btn');
            if (tabName === 'tracks') btns[0].classList.add('active');
            else btns[1].classList.add('active');
        };
        
        // Subtitle Styling Logic
        function updateStyles() {
            const root = document.documentElement;
            // Get from localStorage or default
            const size = localStorage.getItem('sub-size') || '1.5rem';
            const preset = localStorage.getItem('sub-preset') || 'box';
            
            applySize(size);
            applyPreset(preset);
            
            // Update UI buttons
            updateButtonState('setSubtitleSize', size);
            updateButtonState('setSubtitlePreset', preset);
        }
        
        function updateButtonState(funcName, value) {
             // Find buttons calling this function with this value
             // This is a bit manual but works without a framework
             const btns = document.querySelectorAll(`.style-btn[onclick*="${funcName}('${value}"]`);
             if (btns.length > 0) {
                 btns[0].parentElement.querySelectorAll('.style-btn').forEach(b => b.classList.remove('active'));
                 btns[0].classList.add('active');
             }
        }

        window.setSubtitleSize = function(size, btn) {
            localStorage.setItem('sub-size', size);
            applySize(size);
            
            btn.parentElement.querySelectorAll('.style-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
        };
        
        window.setSubtitlePreset = function(preset, btn) {
            localStorage.setItem('sub-preset', preset);
            applyPreset(preset);
            
             btn.parentElement.querySelectorAll('.style-btn').forEach(b => b.classList.remove('active'));
             btn.classList.add('active');
        };
        
        function applySize(size) {
            document.documentElement.style.setProperty('--sub-size', size);
        }
        
        function applyPreset(preset) {
            const root = document.documentElement;
            // Defaults (Box)
            let color = '#ffffff';
            let bg = 'rgba(0,0,0,0.7)';
            let shadow = 'none';
            
            if (preset === 'shadow') {
                bg = 'transparent';
                shadow = '2px 2px 2px #000';
            } else if (preset === 'yellow') {
                color = '#ffeb3b';
                bg = 'transparent';
                shadow = '2px 2px 2px #000';
            } else if (preset === 'transparent') {
                bg = 'rgba(0,0,0,0.3)';
                shadow = '1px 1px 1px #000';
            }
            
            root.style.setProperty('--sub-color', color);
            root.style.setProperty('--sub-bg', bg);
            root.style.setProperty('--sub-shadow', shadow);
        }
        
        // Initialize styles
        updateStyles();

        
        // Close settings when clicking outside
        document.addEventListener('click', (e) => {
            if (!settingsPanel.contains(e.target) && e.target !== settingsBtn) {
                settingsPanel.classList.remove('show');
            }
        });
        
        // Subtitle Logic
        async function loadSubtitles(autoLoad = false) {
            const loadingEl = document.getElementById('loadingSubtitles');
            const listEl = document.getElementById('subtitlesList');
            
            let hasInternal = false;
            
            loadingEl.style.display = 'block';
            loadingEl.textContent = 'Loading subtitles...';
            listEl.innerHTML = '';
            
            try {
                // 1. Fetch from our backend (Internal + Local External)
                const localResp = await fetch(`/Video/Subtitles?path=${encodeURIComponent(videoPath)}`);
                if (!localResp.ok) {
                    console.error('Subtitle fetch failed:', localResp.status, localResp.statusText);
                    return;
                }
                const localData = await localResp.json();
                
                
                if (localData.error) {
                    console.error('Backend reported error:', localData.error, localData.checkedPath);
                } else {
                    hasInternal = false;

                // Render Internal Matches
                if (localData.internalMatches && localData.internalMatches.length > 0) {
                     hasInternal = true;
                     const header = document.createElement('div');
                     header.style.cssText = 'padding: 5px 15px; font-size: 0.8rem; color: #aaa; text-transform: uppercase; margin-top: 10px;';
                     header.textContent = 'Internal Tracks (MKV)';
                     listEl.appendChild(header);

                     localData.internalMatches.forEach(track => {
                        const div = document.createElement('div');
                        div.className = 'subtitle-item';
                        div.innerHTML = `
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <div>
                                    <div>???? ${track.language}</div>
                                    <div style="font-size: 0.85rem; color: #aaa; margin-top: 4px;">Track ${track.index} - ${track.title || track.codec}</div>
                                </div>
                                <div class="subtitle-badge">Embedded</div>
                            </div>
                        `;
                        div.onclick = () => loadSubtitleTrack(null, track.index);
                        listEl.appendChild(div);
                     });
                }
                
                // Render External Matches
                if (localData.externalMatches && localData.externalMatches.length > 0) {
                     const header = document.createElement('div');
                     header.style.cssText = 'padding: 5px 15px; font-size: 0.8rem; color: #aaa; text-transform: uppercase; margin-top: 10px;';
                     header.textContent = 'Local Files';
                     listEl.appendChild(header);

                     localData.externalMatches.forEach(ext => {
                        const div = document.createElement('div');
                        div.className = 'subtitle-item';
                        div.innerHTML = `
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <div>
                                    <div>???? ${ext.language}</div>
                                    <div style="font-size: 0.85rem; color: #aaa; margin-top: 4px;">${ext.title}</div>
                                </div>
                                <div class="subtitle-badge">File</div>
                            </div>
                        `;
                        div.onclick = () => loadSubtitleTrack(ext.path, null);
                        listEl.appendChild(div);
                     });
                }
                } // End else from localData.error check

                // 2. Online search removed as per request
                loadingEl.style.display = 'none';
                
                if (!hasInternal && (!localData.externalMatches || localData.externalMatches.length === 0)) {
                     listEl.innerHTML = `<div style="text-align: center; color: #aaa; padding: 20px; line-height: 1.6;">
                        <div style="font-size: 1.2rem; margin-bottom: 10px;">??</div>
                        <div>No subtitles found</div>
                    </div>`;
                } else if (autoLoad) {
                     // Automatically load first available subtitle if none selected
                     if (hasInternal) {
                         loadSubtitleTrack(null, localData.internalMatches[0].index);
                     } else if (localData.externalMatches && localData.externalMatches.length > 0) {
                         loadSubtitleTrack(localData.externalMatches[0].path, null);
                     }
                }

            } catch (error) {
                loadingEl.style.display = 'none';
                console.error('Error loading subtitles:', error);
            }
        }
        
        // downloadSubtitle function removed as online search is disabled
        
        function loadSubtitleTrack(subtitlePath, trackIndex) {
            // Remove existing tracks
            const tracks = video.querySelectorAll('track');
            tracks.forEach(t => t.remove());
            
            // Add new track
            const track = document.createElement('track');
            track.kind = 'subtitles';
            track.label = 'Default';
            track.srclang = 'en';
            
            if (trackIndex !== null) {
                // Stream internal subtitle
                track.src = `/Video/StreamSubtitle?path=${encodeURIComponent(videoPath)}&index=${trackIndex}`;
            } else {
                // Load local/downloaded file
                track.src = `/Video/Subtitle?path=${encodeURIComponent(subtitlePath)}`;
            }
            
            track.default = true;
            
            video.appendChild(track);
            
            // Enable the track
            setTimeout(() => {
                if (video.textTracks.length > 0) {
                    const shouldShow = localStorage.getItem('subtitles-enabled') === 'true';
                    if (shouldShow) {
                        video.textTracks[0].mode = 'showing';
                        document.getElementById('ccBtn').innerHTML = '<img src="/images/capon.svg" alt="Subtitles" />';
                    } else {
                        video.textTracks[0].mode = 'hidden';
                        document.getElementById('ccBtn').innerHTML = '<img src="/images/capoff.svg" alt="Subtitles" />';
                    }
                }
            }, 100);
        }
        
        // Initial Kick
        showUI();
        
        // Auto-load subtitles on start
        loadSubtitles(true);
    </script>
